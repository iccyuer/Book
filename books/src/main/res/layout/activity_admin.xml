<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_admin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.book.books.ui.activity.AdminActivity">

    <android.support.design.widget.TabLayout
        android:id="@+id/tablayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabIndicatorColor="@color/colorBar"
        app:tabSelectedTextColor="@color/colorBar"
        app:tabTextColor="#0ffae3"
        />

    <android.support.v4.view.ViewPager
        android:layout_below="@+id/tablayout"
        android:id="@+id/vp_admin_home_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>
