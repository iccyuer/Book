<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_search"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.book.books.ui.activity.SearchActivity">

    <ImageView
        android:id="@+id/imgv_back_search"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/babel_back_normal"/>

    <RelativeLayout
        android:layout_toRightOf="@+id/imgv_back_search"
        android:layout_toLeftOf="@+id/tv_search_activity"
        android:layout_marginTop="15dp"
        android:id="@+id/search_button_activity"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/shape_edt_login"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imgv_search_activity"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/dd_order_menu_search"/>

        <EditText
            android:cursorVisible="false"
            android:layout_toRightOf="@id/imgv_search_activity"
            android:id="@+id/edt_search_activity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="好书每满150减50"/>
    </RelativeLayout>

    <TextView
        android:layout_marginTop="23dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:id="@+id/tv_search_activity"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="搜索"
        android:textSize="18sp"/>



</RelativeLayout>
