<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/rl_item_rv_userlist"
                android:padding="10dp">

    <TextView
        android:id="@+id/tv_username_item_rv_userlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:text="会员名：temp"/>

    <TextView
        android:id="@+id/tv_useraddress_item_rv_userlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_username_item_rv_userlist"
        android:text="收货地址：北京城"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text=">"/>

    <View
        android:layout_marginTop="5dp"
        android:layout_below="@+id/tv_useraddress_item_rv_userlist"
        android:background="#5a7b7777"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
</RelativeLayout>