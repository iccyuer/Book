<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">

    <CheckBox
        android:id="@+id/cb_item_rv_carts"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"/>

    <RelativeLayout
        android:id="@+id/rl_item_rv_carts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/cb_item_rv_carts"
        android:padding="10dp"
        >

        <ImageView
            android:id="@+id/imgv_book_item_rv_carts"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="5dp"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/tv_name_item_rv_carts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/imgv_book_item_rv_carts"
            android:text="愿你迷路到我身边"
            android:textColor="@android:color/black"
            android:textSize="16sp"/>


        <TextView
            android:id="@+id/tv_price_item_rv_carts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name_item_rv_carts"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/imgv_book_item_rv_carts"
            android:text="￥ 27.50"
            android:textColor="@color/colorBar"/>

        <TextView
            android:id="@+id/tv_marketprice_item_rv_carts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name_item_rv_carts"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/tv_price_item_rv_carts"
            android:text="￥ 27.50"/>

        <TextView
            android:id="@+id/tv_amount_item_rv_carts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_marketprice_item_rv_carts"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/imgv_book_item_rv_carts"
            android:text="x 1"/>

        <ImageView
            android:id="@+id/imgv_modify_item_rv_carts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_cart_edit_btn"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_hint_edit_item_rv_carts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/cb_item_rv_carts"
        android:padding="10dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/imgv_book_hint_item_rv_carts"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="5dp"
            android:src="@mipmap/ic_launcher"/>

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_toRightOf="@+id/imgv_book_hint_item_rv_carts"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_reduce_hint_item_rv_carts"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/shape_edt_add"
                android:gravity="center"
                android:text="-"/>

            <EditText
                android:textCursorDrawable="@null"
                android:id="@+id/edt_amount_hint_item_rv_carts"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/shape_edt_add"
                android:gravity="center"
                android:text="10"/>

            <TextView
                android:id="@+id/tv_add_hint_item_rv_carts"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/shape_edt_add"
                android:gravity="center"
                android:text="+"/>
        </LinearLayout>

        <Button
            android:id="@+id/bt_confirm_hint_item_rv_carts"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:text="完成"/>

    </RelativeLayout>
</RelativeLayout>