<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.example.book.books.ui.fragment.HomeFragment">

    <TextView
        android:id="@+id/tv_nobook_cart_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="购物车空空如也~/r/n快去添加商品吧"/>

    <TextView
        android:id="@+id/tv_nologin_cart_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="登陆后查看购物车"
        android:visibility="gone"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_carts_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_bottom">
    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingLeft="7dp"
            android:paddingRight="0dp">

            <CheckBox
                android:id="@+id/cb_selectall_cart_fragment"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                android:gravity="center"
                android:text="全选"
                android:textColor="@android:color/black"
                android:textSize="16sp"/>
        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="right|center_vertical"
            android:paddingRight="10dp"
            android:text="合计：￥"
            />

        <TextView
            android:id="@+id/tv_allprice_cart_fragment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:gravity="center"
            android:paddingRight="10dp"
            android:text="0.00"
            />

        <TextView
            android:id="@+id/tv_settlement_cart_fragment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorBar"
            android:gravity="center"
            android:text="结算(0)"
            android:textColor="@android:color/white"/>
    </LinearLayout>

</RelativeLayout>
