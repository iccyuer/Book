<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="80dp"
              android:layout_height="110dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_marginRight="3dp"
            android:id="@+id/imgv_book_item_rv_deliver_book"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:layout_alignParentBottom="true"
            android:id="@+id/tv_amount_item_rv_deliver_book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="55dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imgv_book_item_rv_deliver_book"
            android:text="x1"/>

        <TextView
            android:id="@+id/tv_name_item_rv_deliver_book"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/imgv_book_item_rv_deliver_book"
            android:text="name"/>
    </RelativeLayout>
</LinearLayout>